    "graphql": "15.3.0",
    "graphql-tag": "2.10.4",
    "ipfs-http-client": "45.0.0",
    "is-ipfs": "1.0.3",
    "js-yaml": "3.14.0",
    "jsonschema": "1.3.0",
    "semver": "7.3.2"
  },
  "devDependencies": {
    "@types/jest": "26.0.8",
    "@types/js-yaml": "3.11.1",
    "@types/semver":"^7.3.4",
