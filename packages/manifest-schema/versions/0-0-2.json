{
  "manifest": {
    "id": "Manifest",
    "type": "object",
    "required": ["version", "api"],
    "additionalProperties": false,
    "properties": {
      "version": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "api": {
        "additionalProperties": false,
        "type": ["object"],
        "properties": {
          "schemas": {
            "type": "array",
            "items": {
              "required": ["file"],
              "additionalProperties": false,
              "type": ["object"],
              "properties": {
                "file": {
                  "type": "string",
                  "format": "file"
                }
              }
            }
          },
          "mutation": {
            "type": ["object"],
            "required": ["file", "language"],
            "additionalProperties": false,
            "properties": {
              "file": {
                "type": "string",
                "format": "file"
              },
              "language": {
                "type": "string"
              }
            }
          },
          "query": {
            "type": ["object"],
            "required": ["file", "language"],
            "additionalProperties": false,
            "properties": {
              "file": {
                "type": "string",
                "format": "file"
              },
              "language": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
