import {
  Read,
  ReadDecoder,
  Write,
  WriteSizer,
  WriteEncoder,
  Nullable
} from "@web3api/wasm-as";
import {
{{#types}}
  {{name}}{{^last}},{{/last}}
{{/types}}
} from "./";

{{#types}}
function __write_{{name}}(writer: Write, type: {{name}}) {
  writer.writeMapSize({{properties.length}});
  {{#properties}}
  writer.writeString("{{name}}");
  {{#scalar}}
  writer.write{{#toMsgPack}}{{type}}{{/toMsgPack}}(type.{{name}});
  {{/scalar}}
  {{#array}}
  writer.write{{#toMsgPack}}{{type}}{{/toMsgPack}}(type.{{name}}, (writer: Write, item: {{#toWasm}}{{item.type}}{{/toWasm}}): void => {
    {{> write_array_item}}
  });
  {{/array}}
  {{/properties}}
}

function __read_{{name}}(reader: Read, type: {{name}}) {
  var numFields = reader.readMapLength();

  while (numFields > 0) {
    numFields--;
    const field = reader.readString();

    {{#properties}}
    {{^first}}else {{/first}}if (field == "{{name}}") {
      {{#scalar}}
      type.{{name}} = reader.read{{#toMsgPack}}{{type}}{{/toMsgPack}}();
      {{/scalar}}
      {{#array}}
      type.{{name}} = reader.read{{#toMsgPack}}{{type}}{{/toMsgPack}}((reader: Read): {{#toWasm}}{{item.type}}{{/toWasm}} => {
        {{> read_array_item}}
      });
      {{/array}}
    }
    {{/properties}}
  }
}
{{/types}}
