{
  "id": "AppManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "language",
    "codegen"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "language": {
      "type": "string",
      "format": "appLanguage"
    },
    "codegen": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "directory": {
          "type": "string",
          "format": "file"
        },
        "withExtensions": {
          "type": "boolean"
        }
      },
      "required": [
        "directory"
      ]
    },
    "imports": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "web3apis": {
          "type": "array",
          "format": "uniqueNamespaceArray",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "namespace": {
                "type": "string",
                "format": "importNamespace"
              },
              "uri": {
                "type": "string",
                "format": "importUri"
              }
            },
            "required": [
              "namespace",
              "uri"
            ]
          }
        },
        "plugins": {
          "type": "array",
          "format": "uniqueNamespaceArray",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "namespace": {
                "type": "string",
                "format": "importNamespace"
              },
              "manifest": {
                "type": "string",
                "format": "manifestFile"
              }
            },
            "required": [
              "namespace",
              "manifest"
            ]
          }
        }
      },
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uri": {
            "type": "string"
          },
          "namespace": {
            "type": "string",
            "format": "importNamespace"
          },
          "isPlugin": {
            "type": "boolean"
          }
        },
        "required": [
          "uri",
          "namespace"
        ]
      }
    }
  }
}
