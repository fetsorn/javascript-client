{
  "id": "AppManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "language"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "language": {
      "type": "string",
      "format": "appLanguage"
    },
    "codegen": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "directory": {
          "type": "string",
          "format": "file"
        },
        "withExtensions": {
          "type": "boolean"
        }
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "web3apis": {
          "type": "array",
          "format": "uniqueNamespaceArray",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "namespace": {
                "type": "string",
                "format": "dependencyNamespace"
              },
              "uri": {
                "type": "string",
                "format": "web3apiUri"
              }
            },
            "required": [
              "namespace",
              "uri"
            ]
          }
        },
        "plugins": {
          "type": "array",
          "format": "uniqueNamespaceArray",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "namespace": {
                "type": "string",
                "format": "dependencyNamespace"
              },
              "schema": {
                "type": "string",
                "format": "pluginSchemaFile"
              },
              "uri": {
                "type": "string",
                "format": "web3apiUri"
              }
            },
            "required": [
              "namespace",
              "schema",
              "uri"
            ]
          }
        }
      }
    }
  }
}
