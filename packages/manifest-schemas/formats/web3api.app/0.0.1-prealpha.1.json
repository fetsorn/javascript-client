{
  "id": "AppManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "language",
    "types",
    "packages"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "language": {
      "type": "string",
      "format": "appLanguage"
    },
    "types": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "directory": {
          "type": "string",
          "format": "file"
        },
        "withExtensions": {
          "type": "boolean"
        }
      },
      "required": [
        "directory"
      ]
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uri": {
            "type": "string"
          },
          "namespace": {
            "type": "string",
            "format": "namespace"
          },
          "isPlugin": {
            "type": "boolean"
          }
        },
        "required": [
          "uri",
          "namespace"
        ]
      }
    }
  }
}
