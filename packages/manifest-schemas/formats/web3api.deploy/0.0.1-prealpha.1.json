{
  "id": "DeployManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "deployments"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "deployments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "deploy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "package": {
                "type": "object",
                "properties": {
                  "name": {
                    "type" : "string",
                    "format": "packageName"
                  },
                  "versionOrPath": {
                    "type": "string"
                  }
                },
                "required": ["versionOrPath", "name"],
                "additionalProperties": false
              },
              "config": {
                "patternProperties": {
                  "^.*$": {
                    "type": ["string", "number"]
                  }
                },
                "additionalProperties": false
              }
            },
            "required": ["package"]
          },
          "publish": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "package": {
                "type": "object",
                "properties": {
                  "name": {
                    "type" : "string",
                    "format": "packageName"
                  },
                  "versionOrPath": {
                    "type": "string"
                  }
                },
                "required": ["versionOrPath", "name"],
                "additionalProperties": false
              },
              "config": {
                "patternProperties": {
                  "^.*$": {
                    "type": ["string", "number"]
                  }
                },
                "additionalProperties": false
              }
            },
            "required": ["package"]
          }
        },
        "required": ["name"]
      }
    }
  }
}
