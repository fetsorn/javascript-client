{
  "id": "InfraManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["format"],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "dockerCompose": {
      "type": "any"
    },
    "env": {
      "patternProperties": {
        "^.*$": {
          "type": ["string", "number"]
        }
      },
      "additionalProperties": false
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "package": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "dockerComposePath": {
            "type": "string"
          }
        },
        "required": ["name", "package", "version"]
      }
    }
  }
}
