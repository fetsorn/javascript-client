{
  "id": "InfraManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["format", "packages"],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.1"
    },
    "dockerCompose": {
      "type": "any"
    },
    "env": {
      "patternProperties": {
        "^.*$": {
          "type": ["string", "number"]
        }
      },
      "additionalProperties": false
    },
    "packages": {
      "patternProperties": {
        "^.*$": {
          "oneOf": [
            {"$ref": "#/definitions/remotePackage"},
            {"$ref": "#/definitions/localPackage"}
          ]
        }
      }
    }
  },
  "definitions": {
    "remotePackage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "package": {
          "type": "string"
        },
        "registry": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "dockerComposePath": {
          "type": "string"
        }
      },
      "required": ["name", "package", "version", "registry"]
    },
    "localPackage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string"
        }
      },
      "required": ["path"]
    }
  }
}
