{
  "id": "PluginManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "language",
    "entrypoint",
    "modules"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "0.0.1-prealpha.2"
    },
    "meta": {
      "type": "string",
      "format": "yamlFile"
    },
    "language": {
      "type": "string",
      "format": "pluginLanguage"
    },
    "entrypoint": {
      "type": "string"
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mutation": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "schema": {
              "type": "string",
              "format": "graphqlFile"
            },
            "module": {
              "type": "string",
              "format": "file"
            }
          },
          "required": [
            "schema"
          ]
        },
        "query": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "schema": {
              "type": "string",
              "format": "graphqlFile"
            },
            "module": {
              "type": "string",
              "format": "file"
            }
          },
          "required": [
            "schema"
          ]
        }
      }
    },
    "import_redirects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uri": {
            "type": "string"
          },
          "schema": {
            "type": "string"
          }
        },
        "required": [
          "uri",
          "schema"
        ]
      }
    }
  }
}
