{
  "name": "@web3api/react",
  "version": "0.0.1-prealpha.3",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "build": "rimraf ./build && tsc --project tsconfig.build.json",
    "lint": "eslint --color --ext 'src/**/*.{ts|tsx}'",
    "test:ci": "TEST=true yarn test:env:up && yarn test",
    "test": "TEST=true jest --passWithNoTests --runInBand --verbose --env=jest-environment-jsdom",
    "test:watch": "yarn test --watch",
    "pretest": "yarn install:web3api",
    "pretest:ci": "yarn install:web3api",
    "posttest:ci": "yarn test:env:down",
    "test:env:up": "w3 test-env up",
    "test:env:down": "w3 test-env down",
    "install:web3api": "npx web3api-worker-install ./"
  },
  "dependencies": {
    "@web3api/client-js": "0.0.1-prealpha.3"
  },
  "devDependencies": {
    "@web3api/cli": "0.0.1-prealpha.3",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "26.0.8",
    "jest": "26.2.2",
    "jest-environment-jsdom": "^26.0.1",
    "rimraf": "3.0.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
