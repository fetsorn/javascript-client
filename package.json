{
  "name": "root",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "./packages/**/*",
      "./demos/simple-storage/*"
    ],
    "nohoist": [
      "**/graph-ts",
      "**/graph-cli",
      "**/@testing-library/*",
      "**/@types/testing-library*"
    ]
  },
  "scripts": {
    "build": "lerna run build --no-private",
    "build:cli": "yarn workspace @web3api/cli build",
    "build:client-js": "yarn workspace @web3api/client-js build",
    "build:wasm-as": "yarn workspace @web3api/wasm-as build",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:ci": "lerna run --parallel lint",
    "test": "yarn test:wasm-as && yarn test:client-js",
    "test:wasm-as": "yarn workspace @web3api/wasm-as test",
    "test:client-js": "yarn workspace @web3api/client-js test",
    "test:ci": "yarn test:wasm-as && yarn test:ci:client-js",
    "test:ci:client-js": "yarn workspace @web3api/client-js test:ci",
    "clean": "rimraf ./**/node_modules ./**/build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.2.0",
    "lerna": "3.22.1",
    "prettier": "2.2.1"
  }
}
